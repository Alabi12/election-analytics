<div class="container my-5">
  <h1 class="text-center mb-4">New Constituency</h1>

  <%= form_with model: @constituency, local: true, class: 'needs-validation', novalidate: true do |form| %>
    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', required: true, placeholder: 'Enter constituency name' %>
      <div class="invalid-feedback">
        Please provide a valid name.
      </div>
    </div>

    <div class="form-group">
      <%= form.label :region, class: 'form-label' %>
      <%= form.text_field :region, class: 'form-control', required: true, placeholder: 'Enter region' %>
      <div class="invalid-feedback">
        Please provide a valid region.
      </div>
    </div>

    <%= form.submit 'Create Constituency', class: 'btn btn-success btn-block' %>
  <% end %>

  <%= link_to 'Back to Constituencies', constituencies_path, class: 'btn btn-secondary mt-3' %>
</div>
