<div class="container my-5">
  <h1 class="display-4 text-center text-primary mb-4 font-weight-bold">Constituencies</h1>
  
  <!-- New Constituency Button -->
  <div class="text-center mb-4">
    <%= link_to 'New Constituency', new_constituency_path, class: 'btn btn-primary btn-lg shadow-sm' %>
  </div>

  <!-- Constituency Table -->
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>Region</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @constituencies.each do |constituency| %>
          <tr>
            <td><%= constituency.name %></td>
            <td><%= constituency.region %></td>
            <td class="d-flex justify-content-start align-items-center">
  <!-- Show Button -->
  <%= link_to 'Show', constituency, class: 'btn btn-info btn-sm me-2' %>
  
              <!-- Edit Button -->
              <%= link_to 'Edit', edit_constituency_path(constituency), class: 'btn btn-warning btn-sm me-2' %>
              
              <!-- Delete Button -->
              <%= button_to 'Delete', constituency, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>