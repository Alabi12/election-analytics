<div class="container my-5">
  <!-- Header Section -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Votes for <%= @candidate.name %></h1>
    <%= link_to 'New Vote', new_candidate_vote_path(@candidate), class: 'btn btn-success btn-sm shadow-sm' %>
  </div>

  <!-- Votes Table -->
  <div class="card shadow-sm">
    <div class="card-body">
      <table class="table table-bordered table-striped table-hover">
        <thead class="thead-light">
          <tr>
            <th>Candidate Name</th>
            <th>Vote Count</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @votes.each do |vote| %>
            <tr>
              <td><%= @candidate.name %></td>
              <td><%= vote.vote_count %></td>
              <td class="text-center">
                <%= link_to 'Edit', edit_candidate_vote_path(@candidate, vote), class: 'btn btn-warning btn-sm mx-1' %>
                <%= link_to 'Delete', candidate_vote_path(@candidate, vote), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mx-1' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
