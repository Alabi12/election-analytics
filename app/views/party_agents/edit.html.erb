<h1 class="mb-4">Edit Party Agent Email</h1>

<%= form_with model: @party_agent, url: party_agent_path(@party_agent), method: :patch, local: true do |f| %>
  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title">Update Email Address</h5>

      <!-- Error Messages -->
      <% if @party_agent.errors.any? %>
        <div class="alert alert-danger">
          <h6><%= pluralize(@party_agent.errors.count, "error") %> prohibited this party agent from being saved:</h6>
          <ul>
            <% @party_agent.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Email Field -->
      <div class="form-group mb-3">
        <%= f.label :email, 'New Email Address', class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter new email address' %>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <%= f.submit 'Update Email', class: 'btn btn-primary btn-lg w-100' %>
      </div>

      <!-- Back Button (Optional) -->
      <div class="mt-3">
        <%= link_to 'Back', party_agents_path, class: 'btn btn-secondary btn-lg w-100' %>
      </div>
    </div>
  </div>
<% end %>
