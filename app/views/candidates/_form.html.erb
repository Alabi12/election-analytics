<%= form_with(model: @candidate, url: constituency_candidates_path(@constituency), local: true, class: 'needs-validation', novalidate: true) do |form| %>
  <!-- Display Errors -->
  <% if @candidate.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h4>
      <ul class="mb-0">
        <% @candidate.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name Input -->
  <div class="mb-4">
    <%= form.label :name, class: 'form-label fw-bold text-dark' %>
    <%= form.text_field :name, class: 'form-control form-control-lg shadow-sm', placeholder: 'Enter candidate name' %>
  </div>

  <!-- Party Input -->
  <div class="mb-4">
    <%= form.label :party, class: 'form-label fw-bold text-dark' %>
    <%= form.text_field :party, class: 'form-control form-control-lg shadow-sm', placeholder: 'Enter party name' %>
  </div>

  <!-- Candidate Type Select -->
  <div class="mb-4">
    <%= form.label :candidate_type, class: 'form-label fw-bold text-dark' %>
    <%= form.select :candidate_type, ['Presidential', 'Parliamentary'], prompt: 'Select Candidate Type', class: 'form-select form-select-lg shadow-sm' %>
  </div>

  <!-- Image Upload -->
  <div class="mb-4">
    <%= form.label :image, class: 'form-label fw-bold text-dark' %>
    <%= form.file_field :image, class: 'form-control form-control-lg shadow-sm' %>
    <small class="form-text text-muted">Upload a candidate image (optional).</small>
  </div>

  <!-- Submit Button -->
  <div class="text-center mt-4">
    <%= form.submit 'Create Candidate', class: 'btn btn-primary btn-lg px-5 py-3 shadow-sm' %>
  </div>
<% end %>
