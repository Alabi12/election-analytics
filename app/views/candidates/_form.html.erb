<%= form_with(model: [@constituency, @candidate], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Candidate Name' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :party, 'Political Party' %>
    <%= form.text_field :party, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :bio, 'Candidate Bio' %>
    <%= form.text_area :bio, class: 'form-control' %>
  </div>

  <%= form.submit 'Save Candidate', class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back to Constituency', constituency_path(@constituency), class: 'btn btn-secondary mt-3' %>
