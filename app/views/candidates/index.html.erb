<h2>Presidential Candidates</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Party</th>
      <th>Constituency</th>
      <th>Vote</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @presidential_candidates.each do |candidate| %>
      <%= render partial: 'candidate_row', locals: { candidate: candidate } %>
    <% end %>
  </tbody>
</table>

<h2>Parliamentary Candidates</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Party</th>
      <th>Constituency</th>
      <th>Vote</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @parliamentary_candidates.each do |candidate| %>
      <%= render partial: 'candidate_row', locals: { candidate: candidate } %>
    <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to 'Create New Candidate', new_constituency_candidate_path(@constituency), class: 'btn btn-success' %>
</div>
