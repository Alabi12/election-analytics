<%= form_with(model: @candidate, url: constituency_candidate_path(@constituency, @candidate), local: true, class: 'needs-validation', novalidate: true) do |form| %>
  <!-- Error Messages -->
  <% if @candidate.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h4>
      <ul class="mb-0">
        <% @candidate.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name Field -->
  <div class="mb-3">
    <%= form.label :name, class: 'form-label fw-bold' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Enter candidate name' %>
  </div>

  <!-- Party Field -->
  <div class="mb-3">
    <%= form.label :party, class: 'form-label fw-bold' %>
    <%= form.text_field :party, class: 'form-control', placeholder: 'Enter party name' %>
  </div>

  <!-- Image Upload -->
  <div class="mb-3">
    <%= form.label :image, class: 'form-label fw-bold' %>
    <%= form.file_field :image, class: 'form-control' %>
    <small class="form-text text-muted">Upload an image for the candidate (optional).</small>
  </div>

  <!-- Submit Button -->
  <div class="text-center">
    <%= form.submit 'Update Candidate', class: 'btn btn-primary btn-lg px-4 shadow-sm' %>
  </div>
<% end %>

<!-- Navigation Links -->
<div class="mt-4 d-flex justify-content-center gap-3">
  <%= link_to 'Back to Candidates List', constituency_candidates_path(@constituency), class: 'btn btn-secondary' %>
  <%= link_to 'View Candidate', constituency_candidate_path(@constituency, @candidate), class: 'btn btn-info' %>
  <%= link_to 'Create New Candidate', new_constituency_candidate_path(@constituency), class: 'btn btn-success' %>
</div>
