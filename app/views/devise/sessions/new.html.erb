<div class="container d-flex justify-content-center align-items-center min-vh-70">
  <div class="col-md-6">
    <!-- Log In Header -->
    <h2 class="text-center my-5">Log In</h2>

    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <!-- Email Field -->
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
        </div>

        <!-- Password Field -->
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
        </div>

        <!-- Remember Me Checkbox -->
        <% if devise_mapping.rememberable? %>
          <div class="mb-3 form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div class="mb-3">
          <%= f.submit "Log in", class: "btn btn-primary btn-block w-100" %>
        </div>
      </div>
    <% end %>

    <!-- Devise Links for Registration, Password Reset, etc. -->
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
